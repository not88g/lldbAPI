# Используем SDK для сборки
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# Копируем проект
COPY *.csproj ./
RUN dotnet restore

# Копируем весь код
COPY . ./
RUN dotnet publish -c Release -o out

# Runtime образ
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /app/out ./

# Открываем порт
EXPOSE 10000

# Запуск приложения
ENTRYPOINT ["dotnet", "lldbAPI.dll"]
